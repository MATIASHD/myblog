<%- include('./partials/header') %>
<div class="container">
    <div class="row justify-content-center align-items-center mt-5">
        <div class="col-sm-12 col-md-6">
            <h1 class="text-center">Editar Post</h1>
            <form action="/editpost/<%= article.idarticle %>?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Titulo</label>
                    <input type="text" value="<%- article.title %>" name="title" class="form-control" id="title" aria-describedby="title">
                </div>
                <div class="mb-3">
                    <label for="subtitle" class="form-label">Subtitulo</label>
                    <input type="text" value="<%- article.subtitle %>" name="subtitle" class="form-control" id="subtitle" aria-describedby="subtitle">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Imagen</label>
                    <input class="form-control" value="<%- article.image %>" name="image" accept="image/*" type="file" id="image">
                </div>
                <div class="mb-3">
                    <label for="floatingTextarea">Post</label>
                    <textarea class="form-control" value="<%- article.contenido %>" name="post" rows="10" cols="700" placeholder="Leave a comment here" id="floatingTextarea"></textarea>
                </div>
                <div class="mb-3">
                    <label for="author" class="form-label">Autor</label>
                    <input type="text" value="<%- article.author %>" name="author" class="form-control" id="author" aria-describedby="author">
                </div>
                <div class="mb-3">
                  <button type="submit" class="btn btn-primary">Publicar</button>
                </div>
            </form>            
       </div>
    </div>
</div>
<%- include('./partials/footer') %>